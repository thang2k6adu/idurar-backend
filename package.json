{
  "name": "idurar-backend",
  "version": "1.0.0",
  "engines": {
    "npm": "10.2.4",
    "node": "20.9.0"
  },
  "main": "server.js",
  "author": "thang2k6adu <thang2k6adu@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src --ext js --report-unused-disable-directives --max-warnings 0",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel ./src -d ./build/src",
    "build": "npm run clean && npm run build-babel",
    "production": "npm run build && cross-env NODE_ENV=production node ./build/src/server.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec babel-node ./src/server.js",
    "setup": "npx babel-node src/setup/setup.js",
    "upgrade": "node src/setup/upgrade.js",
    "reset": "babel-node src/setup/reset.js",
    "test": "jest --config jest.config.mjs",
    "start": "npx babel-node ./build/src/server.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.859.0",
    "@babel/runtime": "^7.27.6",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "currency.js": "^2.0.4",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.2",
    "glob": "^11.0.3",
    "html-pdf": "^3.0.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "moment": "^2.30.1",
    "mongoose": "^8.15.2",
    "mongoose-autopopulate": "^1.1.0",
    "multer": "^2.0.2",
    "pug": "^3.0.3",
    "puppeteer": "^24.15.0",
    "resend": "^4.6.0",
    "shortid": "^2.2.17",
    "transliteration": "^2.3.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.27.4",
    "@babel/node": "^7.28.0",
    "@babel/plugin-transform-runtime": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "babel-jest": "^30.0.2",
    "babel-plugin-module-resolver": "^5.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.29.0",
    "jest": "^30.0.2",
    "nodemon": "^3.0.1"
  }
}
